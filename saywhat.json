{
    "actions": [
        {
            "collect": {
                "name": "collect_api_request",
                "questions": [
                    {
                        "question": "To get more information, please type one of the following: SDK, Python Helper Library, Tutorials, API for WhatsApp, Autopilot or Contact us",
                        "name": "main_topic",
                        "type": "auto_main",
                        "validate": {
                            "on_failure": {
                                "messages": [
                                    {
                                        "say": "Sorry, we don't have any information on that topic. :-/"
                                    }
                                ],
                                "repeat_question": true
                            },
                            "on_success": {
                                "say": " searching :-)"
                            },
                            "max_attempts": {
                                "redirect": "task://collect_fallback",
                                "num_attempts": 3
                            }
                        }
                    }
                ],
                "on_complete": {
                    "redirect": "https://<your_domain>/collect"
                }
            }
        }
    ]
}